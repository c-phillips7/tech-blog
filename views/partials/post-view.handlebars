<article class="post">
    <div class="title">
        <a href="/post/{{id}}"> {{title}} </a>
    </div>
    <div>
        <p class="description">
            {{content}}
        </p>
    </div>
    <div class="subtext">
        by {{user.username}} on {{format_date created_at}}
        <a href="/post/{{id}}">comments</a>
    </div>
</article>